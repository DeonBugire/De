//В начале у меня 0 денег. По понедельникам я зарабатываю по 1 монете, по вторникам по 2 и  т.д.
//По пятницам я кучу и трачу 5 монет.
// В субботу и воскресенье ничего не делаю и не зарабатываю.
// Сколько у меня будет денег через 21 день, если я начну с понедельника?

fun main() {
    var cash = 0
    var dayOfWeek = 1
    var week = 1
    while (week <= 3) {
        while (dayOfWeek <= 5) {
            cash += dayOfWeek
            dayOfWeek += 1
        }
        cash -= 5
        while (dayOfWeek <= 7) {
            cash += 0
            dayOfWeek += 1
        }
        week += 1
        dayOfWeek = 1
    }
    println("Вы накопили $cash")
}
